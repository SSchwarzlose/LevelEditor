<Window x:Class="LevelEditor.View.NewMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewMapWindow" Height="300" Width="300">
    <StackPanel>
        <DockPanel>
            <TextBlock DockPanel.Dock="Left" Width="50" Margin="5">Width: </TextBlock>
            <TextBox Name="MapWidthTextBox" Margin="5">32</TextBox>
        </DockPanel>
        <DockPanel>
            <TextBlock DockPanel.Dock="Left" Width="50" Margin="5">Height: </TextBlock>
            <TextBox Name="MapHeighTextBox" Margin="5">32</TextBox>
        </DockPanel>
        <DockPanel>
            <TextBlock DockPanel.Dock="Left" Margin="5">Default Tile: </TextBlock>
            <StackPanel Name="DefaultTilePanel" Margin="5"/>
        </DockPanel>
        <Button Click="OnCreateMapClicked">Create Map</Button>
    </StackPanel>
</Window>
